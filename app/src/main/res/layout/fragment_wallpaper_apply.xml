<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallpaper.ui.screens.ApplyFragment">

    <ImageView
        android:id="@+id/applyImgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/centerHelper"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/centerHelper"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/applyWallpaperName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerHelper"
        android:layout_marginStart="26sp"
        android:layout_marginTop="26sp"
        android:layout_marginEnd="26sp"
        android:layout_marginBottom="26sp"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="22sp" />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26sp"
        android:layout_marginTop="26sp"
        android:layout_marginEnd="26sp"
        android:layout_marginBottom="26sp"
        android:backgroundTint="@color/button_dark_blue"
        android:text="@string/apply"
        android:textColor="@color/primary" />


</RelativeLayout>