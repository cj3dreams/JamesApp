<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_1"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_2"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:layout_marginTop="@dimen/shape_offset"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintStart_toEndOf="@+id/ic_1"
        app:layout_constraintTop_toTopOf="@+id/ic_1" />

    <ImageView
        android:id="@+id/ic_3"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:layout_marginTop="@dimen/shape_offset"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintEnd_toStartOf="@+id/ic_1"
        app:layout_constraintTop_toTopOf="@+id/ic_1" />

    <ImageView
        android:id="@+id/ic_4"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintEnd_toStartOf="@+id/ic_2"
        app:layout_constraintStart_toEndOf="@+id/ic_3"
        app:layout_constraintTop_toBottomOf="@+id/ic_1" />

    <ImageView
        android:id="@+id/ic_5"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="@dimen/shape_offset"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintEnd_toStartOf="@+id/ic_3"
        app:layout_constraintTop_toTopOf="@+id/ic_3" />

    <ImageView
        android:id="@+id/ic_6"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:src="@drawable/hexagon_shape"
        app:layout_constraintStart_toEndOf="@id/ic_5"
        app:layout_constraintTop_toBottomOf="@id/ic_3"/>

    <ImageView
        android:id="@+id/ic_7"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        app:layout_constraintTop_toBottomOf="@id/ic_4"
        app:layout_constraintStart_toEndOf="@id/ic_6"
        android:src="@drawable/hexagon_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>