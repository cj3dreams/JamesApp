<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="26dp">

    <ImageView
        android:visibility="gone"
        android:scaleType="centerInside"
        android:id="@+id/questionImgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:layout_below="@+id/questionImgView"
        android:id="@+id/questionTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="50dp"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        tools:text="Город в котором вы жили и будет жить скажите только и только правду без враьнья пожалуйста!" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currentQuestionTx"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/answer1Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            tools:text="Кокочамбо вапвап" />

        <Button
            android:id="@+id/answer2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer1Btn"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            tools:text="Кокочамбо вапвап" />

        <Button
            android:id="@+id/answer3Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer2Btn"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            tools:text="Кокочамбо вапвап" />

        <Button
            android:id="@+id/answer4Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer3Btn"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            tools:text="Кокочамбо вапвап" />

    </RelativeLayout>

    <TextView
        android:id="@+id/currentQuestionTx"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primary_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        tools:text="1/10"/>

</RelativeLayout>