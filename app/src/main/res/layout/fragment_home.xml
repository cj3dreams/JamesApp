<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.HomeFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="26dp">

        <ImageView
            android:id="@+id/homeIconStarImgView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/homeStarsCountTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/homeIconStarImgView"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            tools:text="1100" />

    </RelativeLayout>

    <Button
        android:id="@+id/homePlayBtn"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/ic_play"
        android:foreground="@drawable/ic_play" />

    <Spinner

        android:id="@+id/homeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homePlayBtn"
        android:layout_centerHorizontal="true"
        android:entries="@array/gameModeArray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="26dp">

        <ImageView
            android:id="@+id/homeIconImgView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/homeIconImgView"
            android:text="@string/app_name"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

    </RelativeLayout>


</RelativeLayout>